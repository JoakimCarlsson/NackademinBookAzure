@model NackademinBookAzure.ViewModels.BookListIndexViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section class="py-5">
    <div class="container p-0">
        <div class="row">
            <div class="col-lg-3 order-2 order-lg-1">
                <h5 class="text-uppercase mb-4">Books</h5>
                <div class="py-2 px-4 bg-dark text-white mb-3"><strong class="small text-uppercase font-weight-bold">Programming</strong></div> @*TODO THIS WILL BE THE CATEGORY, and the categories will be Sub-Categories.*@
                <ul class="list-unstyled small text-muted pl-lg-4 font-weight-normal">
                    @foreach (var book in @Model.Books)
                    {
                        <li class="mb-2">
                            <a a href="#" onclick="FetchBook(@book.Id);return false;">@book.Title</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-9 order-1 order-lg-2 mb-5 mb-lg-0">
                <div id="selectedBook">

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>

        function FetchBook(id)
        {
            $.ajax({
                url: "/Book/SelectedBook?id=" + id,   
                success: function(result) {
                    $('#selectedBook').html(result);
                }
            });
        }


    </script>    
}